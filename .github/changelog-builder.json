{
    "categories": [
        {
            "title": "## üöÄ Features",
            "labels": [
                "feature",
                "feat"
            ],
            "rules": [
                {
                    "on_property": "branch",
                    "pattern": "^(feat|feature)/.+",
                    "flags": "igu"
                },
                {
                    "on_property": "title",
                    "pattern": "^(feat|feature): .+",
                    "flags": "igu"
                }
            ]
        },
        {
            "title": "## üêõ Fixes",
            "labels": [
